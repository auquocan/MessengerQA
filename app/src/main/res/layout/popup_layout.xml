<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popuplayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/imageUserPopup"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cam"></ImageView>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textViewBirthdayPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageIconBirth"
        android:layout_alignLeft="@+id/textViewSexsualPopup"
        android:layout_alignStart="@+id/textViewSexsualPopup"

        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#8ae3f2"
        android:textSize="17dp" />

    <Button
        android:id="@+id/ButtonAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewBirthdayPopup"
        android:layout_marginLeft="60sp"
        android:layout_toRightOf="@+id/textViewBirthdayPopup"
        android:background="@drawable/button"
        android:text="Accept"
        android:textColor="#ffffff" />


    <TextView
        android:id="@+id/textViewSexsualPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageIconSexual"
        android:layout_marginBottom="13dp"
        android:layout_toEndOf="@+id/ImageIconUser"

        android:layout_toRightOf="@+id/ImageIconUser"
        android:text="sexual"
        android:textColor="#8ae3f2"
        android:textSize="17dp" />


    <TextView

        android:id="@+id/textViewNamePopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageIconUser"
        android:layout_below="@id/imageUserPopup"
        android:layout_marginTop="4dp"

        android:layout_toEndOf="@+id/ImageIconUser"
        android:layout_toRightOf="@+id/ImageIconUser"
        android:text="Popup"
        android:textColor="#8ae3f2"
        android:textSize="17dp" />


    <ImageView
        android:id="@+id/ImageIconUser"
        android:layout_width="56dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view2"
        android:src="@drawable/user" />

    <ImageView
        android:id="@+id/ImageIconSexual"
        android:layout_width="51dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/ImageIconUser"
        android:layout_alignRight="@+id/ImageIconUser"
        android:layout_below="@+id/ImageIconUser"
        android:layout_weight="0.12"
        android:src="@drawable/sexual" />

    <ImageView
        android:id="@+id/ImageIconBirth"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_alignEnd="@+id/ImageIconUser"
        android:layout_alignRight="@+id/ImageIconUser"
        android:layout_below="@+id/ImageIconSexual"
        android:layout_marginRight="10dp"
        android:src="@drawable/birthday" />

    <!--<Button-->
    <!--android:id="@+id/btnclose"-->
    <!--android:layout_marginTop="30dp"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Close" />-->

</RelativeLayout>